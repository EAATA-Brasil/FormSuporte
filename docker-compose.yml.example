version: "3.9"

services:

  web:
    container_name: eaata_web_dev
    build:
      context: ./FormSuporte
      dockerfile: Dockerfile
    command: python manage.py runserver 0.0.0.0:8000

    volumes:
      # monta a raiz do projeto Django corretamente
      - ./FormSuporte:/usr/src/app

    ports:
      - "8000:8000"

    env_file:
      - .env

    depends_on:
      db:
        condition: service_healthy
      redis:
        condition: service_started

    restart: always


  redis:
    container_name: eaata_redis_dev
    image: redis:7-alpine
    expose:
      - 6379
    restart: always


  db:
    container_name: eaata_db_dev
    image: mysql:8.0

    environment:
      MYSQL_DATABASE: ${DB_NAME}
      MYSQL_USER: ${DB_USER}
      MYSQL_PASSWORD: ${DB_PASSWORD}
      MYSQL_ROOT_PASSWORD: ${DB_PASSWORD}

    volumes:
      - mysql_data:/var/lib/mysql

    ports:
      - "3306:3306"

    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 5s
      timeout: 5s
      retries: 20

    restart: always


volumes:
  mysql_data:
  static_volume:
  media_volume:
